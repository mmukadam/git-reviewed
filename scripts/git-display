my $show = `git show $review_hash`;  


open(my $info, '> /tmp/review1.tmp');
print $info "$show";
close $info;
my $file = '/tmp/review1.tmp';
open my $info1, $file or die "Could not open $file: $!";



my $filenew = '/tmp/newfile.tmp';
my $fileold = '/tmp/oldfile.tmp';

open(my $fh, '>', $filenew) or die "Could not open file '$filenew' $!";

open(my $fo, '>', $fileold) or die "Could not open file '$fileold' $!";
my $old;
my $new;

my $value = 1;
while(my $line = <$info1>) {
       
       
        #$line =~ s/\>//g;
         
         if ( $value == 1 and $line =~ /^From/)
           {  $value = 0; 
              print "this is linux review";
              

          while(my $line = <$info1>) {
               if ($line =~ /^diff/xms)
  
                   { 
                     $inside_diff = 1;
                     print $fh "-------------------------------------------------------\n";
                     print $fo "-------------------------------------------------------\n";
                      print $fh "-------------------------------------------------------\n";
                     print $fo "-------------------------------------------------------\n";
                     print $fh "$line"; 
                     print $fo "$line"; 
                    }
               elsif ($line =~ /^index/xms) 
                   {
                     print $fh "$line"; 
                     print $fo "$line"; 
                    }
  
              elsif ($line =~ /^\-\-\-/xms) 
                   {
                     print $fh "$line"; 
                     print $fo "$line"; 
                    }
  

               elsif ($line =~ /^\+\+\+/xms) 
                   { 
                     print $fh "$line"; 
                     print $fo "$line"; 
                    }
  

                elsif ($line =~ /^\@\@/xms) 
                   {
                     print $fh "$line"; 
                     print $fo "$line"; 
                     print $fh "--\n";
                     print $fo "--\n";
                    }
                
               elsif($line =~ /^\+/)  {
                
		
                
                print $fo "\n";
                print $fh "$line"; 
              
                
	}

         elsif($line =~ /^\-/)  {
                
                
		
             print $fh "\n"; 
            print $fo "$line"; 
               
          
	}
        elsif($line =~ /^\s/) { 
          print $fo "$line"; 
           print $fh "$line"; 
          
          }
       }
      }  	

#--------------------------------------------------------------------------------------------------------
           if($line =~ /^>diff/xms) {
	 	
                     $inside_diff = 1;
                     print $fh "-------------------------------------------------------\n";
                     print $fo "-------------------------------------------------------\n";
                      print $fh "-------------------------------------------------------\n";
                     print $fo "-------------------------------------------------------\n";
                     print $fh "$line"; 
                     print $fo "$line"; 
                    }
               elsif ($line =~ /^>index/xms) 
                   {
                     print $fh "$line"; 
                     print $fo "$line"; 
                    }
  
              elsif ($line =~ /^>\-\-\-/xms) 
                   {
                     print $fh "$line"; 
                     print $fo "$line"; 
                    }
  

               elsif ($line =~ /^>\+\+\+/xms) 
                   { 
                     print $fh "$line"; 
                     print $fo "$line"; 
                    }
  

                elsif ($line =~ /^>\@\@/xms) 
                   {
                     print $fh "$line"; 
                     print $fo "$line"; 
                     print $fh "--\n";
                     print $fo "--\n";
                    }
                
               elsif($line =~ /^>\+/)  {
                
		
                
                print $fo "\n\n";
                print $fh "$line"; 
              
                
	}

         elsif($line =~ /^>\-/)  {
                
                
		
             print $fh "\n\n"; 
            print $fo "$line"; 
               
          
	}
        elsif($line =~ /^>\s/) { 
          print $fo "$line"; 
           print $fh "$line"; 
          
          }
      
        	
      #include comments

       
          
         elsif($oldline=~ /^>\-/){ 
                print $fo "\n";
              print $fo "$line";
               print $fo "\n";
              
            }
         elsif($oldline=~ /^>\+/)  {
                 
                 print $fh "\n";
                 print $fh "$line";
                 print $fh "\n";
            }
         elsif($oldline=~ /^>\s/)  {
                 print $fo "\n";
                 print $fh "\n";
                 print $fh "$line";
                  print $fo "$line";
                  print $fo "\n";
                 print $fh "\n";
       }
         
                


      
 
 $oldline=$line;

}


system("git displaygui");
close $fh;
close $fo;
